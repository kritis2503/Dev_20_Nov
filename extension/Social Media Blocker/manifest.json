{
    "name": "Social Media Blocker",
    "version": "1.0",
    "description": "Blocks Social media",
    "manifest_version": 2,
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "css": ["myStyles.css"],
          "js": ["content.js"]
        }
      ],
      "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
  
      "browser_action": {
        "default_popup": "popup.html"
      }
  }